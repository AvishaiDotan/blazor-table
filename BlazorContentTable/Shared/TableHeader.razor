<h3>TableHeader</h3>
<thead>
    <tr>
        @if (TableHeaderData != null)
        {
            @foreach (var header in TableHeaderData.Select((txt, idx) => new { txt, idx }))
            {
                <th @onmousedown="(ev) => HandleMouseDown(ev, header.idx)" oncontextmenu="return false;">@header.txt</th>
            }
            <th @onmousedown="(ev) => HandleMouseDown(ev, -1)" oncontextmenu=" return false;">+</th>
        }
    </tr>
</thead>

@code {

    [Parameter]
    public List<string> TableHeaderData { get; set; } = new List<string>();

    [Parameter]
    public EventCallback<MouseEventArgs> IncrementColumn { get; set; }

    private async Task HandleMouseDown(MouseEventArgs eventArgs, int idx)
    {

        await IncrementColumn.InvokeAsync(eventArgs);
    }
}
